    "ie-shim": "^0.1.0",
    "ng2-bootstrap": "^1.3.3",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.1.1",
    "zone.js": "^0.7.7"
  },
  "devDependencies": {
