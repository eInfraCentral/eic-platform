{
  "name": "openminted-platform",
  "version": "1.0.0",
  "scripts": {

    "lite": "lite-server",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "clean": "rm -rf dist/ && mkdir dist",
    "serve": "angularserver --port 5400 --dir . --file index.html",

    "build_prod": "npm run build && browserify -s main app/main.js > dist/bundle.js && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "build": "webpack --progress",
    "watch": "npm run build -- --watch",
    "server": "webpack-dev-server --inline --progress --port 3000 --content-base .",
    "start": "npm run server"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.4.7",
    "@angular/compiler": "~2.4.7",
    "@angular/core": "~2.4.7",
    "@angular/forms": "~2.4.7",
    "@angular/http": "~2.4.7",
    "@angular/platform-browser": "~2.4.7",
    "@angular/platform-browser-dynamic": "~2.4.7",
    "@angular/router": "~3.4.7",
    "@angular/upgrade": "~2.4.7",
    "angular-in-memory-web-api": "~0.2.4",
    "angular-oauth2-oidc": "^1.0.20",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "ng2-bootstrap": "^1.3.3",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.1.1",
    "zone.js": "^0.7.7",
    "ie-shim": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "lite-server": "^2.2.2",
    "browserify": "^13.1.1",
    "uglify-js": "^2.7.4",
    "simple-angular-server": "^0.3.12",
    "typings": "^1.4.0",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^2.2.4",
    "typescript": "2.0.10",
    "css-loader": "^0.25.0",
    "raw-loader": "^0.5.1",
    "to-string-loader": "^1.1.4",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.2.1",
    "webpack-merge": "^2.6.1"
  }
}
