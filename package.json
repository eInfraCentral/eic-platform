    "awesome-typescript-loader": "^2.2.4",
    "bootstrap-loader": "^2.0.0-beta.21",
    "bootstrap-sass": "^3.3.7",
    "css-loader": "^0.25.0",
    "jquery": "^3.1.1",
    "lite-server": "^2.2.2",
    "node-sass": "^4.5.0",
